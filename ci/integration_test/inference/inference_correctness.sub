srun --ntasks="${SLURM_JOB_NUM_NODES}" --container-image="${CONT}" --container-mounts="${MOUNTS}" bash -cx " \
    mkdir -p /dump_infer &&
    cd ${NEW_CRITEO_MOUNT} &&
